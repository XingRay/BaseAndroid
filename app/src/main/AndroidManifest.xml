<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ray.baseandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".pages.mainpage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".pages.dialogactivitytest.DialogActivityTestActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".widget.dialogactivity.DialogActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.ray.baseandroid.pages.dim.DimActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.ray.baseandroid.pages.inputtest.InputTestActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.ray.baseandroid.pages.oom.OOMTestActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.ray.baseandroid.pages.intenttest.IntentTestActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.ray.baseandroid.pages.intenttest.IntentReceiverActivity"
            android:configChanges="keyboard|orientation"
            android:screenOrientation="portrait"/>
        "

        <service android:name=".pages.dialogactivitytest.DialogActivityTestService"/>

    </application>

</manifest>