<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="work_title_view">
        <attr name="title" format="string"/>
        <attr name="type" format="string"/>
        <attr name="name" format="string"/>
        <attr name="content" format="string"/>
        <attr name="time" format="string"/>
        <attr name="type_color" format="color"/>
        <attr name="type_size" format="dimension"/>
        <attr name="type_background_color" format="color"/>
        <attr name="title_color" format="color"/>
        <attr name="title_size" format="dimension"/>
        <attr name="time_color" format="color"/>
        <attr name="time_size" format="dimension"/>
        <attr name="name_content_color" format="color"/>
        <attr name="name_content_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CollapsibleLinearLayout">
        <attr name="animation_duration" format="integer"/>
        <attr name="collapsed_height" format="integer"/>
        <attr name="collapsed_width" format="integer"/>
        <attr name="is_collapsed" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="IRecyclerView">
        <attr name="refreshHeaderLayout" format="reference" />  <!--refresh header layout res id-->
        <attr name="loadMoreFooterLayout" format="reference" /> <!--loadmore fotter layout res id-->
        <attr name="refreshEnabled" format="boolean" />
        <attr name="loadMoreEnabled" format="boolean" />
        <attr name="refreshFinalMoveOffset" format="dimension" />   <!--refresh header max move distance-->
    </declare-styleable>
</resources>